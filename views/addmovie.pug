doctype html
html
  head
    title Add movie
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous") 
  body
    div.container
      h1 New movie  
      form(action='/addmovie', method='POST')
        .v-textfield
          input(placeholder="Film", autofocus, type="text", name="title")
        .v-textfield
          input(placeholder="Director", autofocus, type="text", name="director")
        .v-textfield
          input(placeholder="Year", autofocus, type="number", name="year") 
        div
          input(type="submit", value="Add").btn.btn-primary